<UserControl x:Class="LoraCardGame.User_Controls.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoraCardGame.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle Fill="Transparent" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="150"/>
        <TextBlock x:Name="textBlockPlayer" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="150" Height="30" FontSize="20" HorizontalAlignment="Center" TextAlignment="Center"/>
        <TextBlock x:Name="textBlockPoints" HorizontalAlignment="Center" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="21" Width="150" FontSize="16" Margin="0,52,0,0" TextAlignment="Center"/>
    </Grid>
</UserControl>
    
